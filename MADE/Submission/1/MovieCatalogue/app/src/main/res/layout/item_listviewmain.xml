<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:id="@+id/imageviewItemPoster"
        tools:src="@drawable/poster_a_star"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:text="75"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_shape_score_green"
        android:id="@+id/textviewItemScore"/>
    <LinearLayout
        android:id="@+id/movie_header_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/textviewItemScore"
        android:layout_toRightOf="@id/imageviewItemPoster"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/textviewItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Dump Title"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textviewItemRelease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="05-10-2019"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/movie_genre_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/movie_header_item_layout"
        android:layout_toRightOf="@id/imageviewItemPoster"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp">
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textviewItemDescription"
        android:layout_toRightOf="@id/imageviewItemPoster"
        android:layout_below="@id/movie_genre_item_layout"
        tools:text="@string/lorem"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:maxLines="3"/>

</RelativeLayout>